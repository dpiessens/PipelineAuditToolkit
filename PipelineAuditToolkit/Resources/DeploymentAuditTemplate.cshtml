@using System
@using PipelineAuditToolkit.Models
@using PipelineAuditToolkit.Resources
@inherits CustomTemplateBase<DeploymentAuditTemplateViewModel>

<head>
    <!-- import GridStyles.css -->
    <style>
        .h1 .title {
            color: darkslategrey;
        }

        .row .header {
            border-bottom: solid;
            border-bottom-width: medium;
            border-bottom-color: dimgrey;
        }

        .row .deployment {
            padding-bottom: 9px;
            border-bottom: 1px solid #808080;
        }

        .row .details {
            margin-top: 10px;
            margin-bottom: 15px;
            background-color: #f5f5f5;
        }
    </style>
</head>
<body>
    <h1>Deployment Pipeline Report </h1>
    @if (Model.HasDates)
    {
        <h3>@Model.DateRange</h3>
    }
    <h5>Generated on @DateTime.Now</h5>
    <hr />
    <br />
    <div class="container">
        @foreach (IProject p in Model.Projects)
        {
            <div class="row header">
                <div class="col-xs-12">
                    <h2 class="title">@p.Name</h2>
                </div>
            </div>
            <div class="col-xs-11 col-xs-offset-1">
                <div class="row">
                    <div class="container">
                        @foreach (IProductionDeployment deployment in p.Deployments)
                {
                            <div class="row">
                                <div class="col-xs-12 @(deployment.HasViolations ? "text-danger" : string.Empty)">
                                    <h3>@deployment.Name</h3>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-xs-1"><strong>Has Violations</strong></div>
                                <div class="col-xs-11"><p class="@(deployment.HasViolations ? "text-danger" : string.Empty)">@(deployment.HasViolations ? "Yes" : "No")</p></div>
                            </div>
                            <div class="row">
                                <div class="col-xs-1"><strong>Deploy Date</strong></div>
                                <div class="col-xs-11">@deployment.DeployDate.ToReportDateTime()</div>
                            </div>
                            <div class="row">
                                <div class="col-xs-1"><strong>Initiated By</strong></div>
                                <div class="col-xs-11">@deployment.DeployUsers</div>
                            </div>
                            <div class="row deployment">
                                <div class="col-xs-1"><strong>Build</strong></div>
                                <div class="col-xs-11">@deployment.BuildNumber</div>
                            </div>
                            <div class="row details">
                                <div class="col-xs-11 col-xs-offset-1">
                                    <table class="table">
                                        <thead>
                                            <th>Id</th>
                                            <th>Date</th>
                                            <th>User</th>
                                            <th>Message</th>
                                        </thead>
                                        @foreach (ChangeItem change in deployment.Changes)
                                        {
                                            <tr class="@(change.IsViolation ? "danger" : string.Empty)">
                                                <td class="col-md-1">@change.FormattedId</td>
                                                <td class="col-md-2">@change.Created.ToReportDateTime()</td>
                                                <td class="col-md-2">@change.UserId</td>
                                                <td class="col-md-7">@change.Message</td>
                                            </tr>
                                        }
                                    </table>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        }
    </div>
</body>